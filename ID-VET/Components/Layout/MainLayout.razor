    <div class="container-fluid d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center">
            <img src="images/erasmus-logo-1.png" alt="Erasmus+" class="me-2 logo" />
            <span class="project-title">
                A Micro-Survey Framework for Inclusion and Diversity in Vocational Education
            </span>
        </div>

       
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Праве меню -->
        <div class="collapse navbar-collapse justify-content-end" id="navMenu">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">Home</NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="about">About</NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="partners">Partners</NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="reports">Reports</NavLink>
                </li>
            </ul>
        </div>
    </div>
</header>

<main class="main-content">
    @Body
</main>


<footer class="footer text-dark text-center py-3 fixed-bottom">
    <div class="container d-flex justify-content-between align-items-center">
    
        <div class="d-flex align-items-center">
            <img src="images/logo_transparent.png" alt="ID-VET Logo" class="footer-logo me-3" />
            <span class="footer-text">ID-VET Project</span>
        </div>

        <small class="footer-info">
            Project Duration: Sept 2023 – Aug 2025 | Budget: €250,000
        </small>
    </div>
</footer>


